<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.persice-app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Persice</name>
  <icon src="img/logo.png" width="150" height="150" />
  <description>
    Persice - Expand your network - People and events that match your interests.
  </description>
  <author email="sasa.macakanja@gmail.com" href="https://persice.com">Persice</author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <access origin="*" launch-external="yes"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <icon src="img/logo.png" width="150" height="150" />
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <preference name="Fullscreen" value="true"/>
    <access origin="*" launch-external="yes"/>
  </platform>
</widget>
